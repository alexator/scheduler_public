<!DOCTYPE html>

<html>
	<head>
		<% include ../views/partials/head %>
	</head>

	<body>
		<% if (user) { %>
			<% include ../views/partials/nav_bar %>
		<div class="container">
			<h1><%= title %></h1>
			<br>
			<div class="panel panel-default">
				<div class="panel-body">
					<div class="list-group">
					<% students.forEach( function(student, index) { %>
						<div class="list-group-item">
					        <div class="row-action-primary">
					            <i class="mdi-action-account-circle"></i>
					        </div>
					        <div class="row-content">
					            <div class="action-secondary"><i class="mdi-material-info"><a href="/student_program/<%= student.id %>">View Program</a></i></div>
					            <h4 class="list-group-item-heading"><%= student.lastName + ', ' + student.firstName %></h4>
					            <p class="list-group-item-text"><%= student.school.name %></p>
					        </div>
					    </div>
					    <div class="list-group-separator"></div>

						<a href="/students/<%= student.id %>"> View </a>
						<a href="/students/<%= student.id %>/update"> Update </a>
						<a href="/students/<%= student.id %>/delete"> Delete </a>
						<a href="/student_program/<%= student.id %>"> View Program </a>
						<br>
					<% }) %>
					</div>
				</div>
			</div>
		</div>
		<% } else { %>
			<div class="container">
				<h1>Oops... only registered users could use this feature</h1>
				<h2>Please choose one of the below options</h2>
				<div class="row">
					<div class="col-md-6 rightify">
						<a href="/signup" class="btn btn-primary btn-lg">Sign Up</a>
					</div>
					<div class="col-md-6 leftify">
						<a href="/signin" class="btn btn-primary btn-lg">Sign In</a>
					</div>
				</div>
			</div>
		<% } %>
		<footer class="footer">
			<div class="list-group-separator"></div>
			<% include ../views/partials/footer %>
		</footer>
		<% include ../views/partials/loadSchedulingScripts %>
	</body>
</html>