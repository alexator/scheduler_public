<!DOCTYPE html>

<html>
	<head>
		<% include ../views/partials/head %>
	</head>
	<body>
	<% if(user) { %>
		<% include ../views/partials/nav_bar %>
		<div class="container-fluid">
			<div class="user_timezone" id="<%=user.timezone%>"  style="display:none"></div>
			<div class="student_id" id="<%=student.id%>"  style="display:none"></div>
			<div class="student_fullName" id="<%=student.fullName%>"  style="display:none"></div>
			<div class="form-group">
				<div class="row">
					<div class="col-md-12">
						<h3>Student: <%= student.fullName%></h3>
					</div>
				</div>
			</div>
			<div class="panel panel-primary">
			    <div class="panel-heading">
			        <h3 class="panel-title">Schedule</h3>
			    </div>
			    <div class="panel-body">
					<div class="form-group">
						<div class="row" id="program_table">
							<div class="col-md-12">
								<div class="student_schedule">
								<table class="table table-striped table-bordered">
								    <thead>
								        <tr>
								            <th>Hours</th>
								            <th>Friday, January 16th</th>
								            <th>Saturday, January 17th</th>
								            <th>Sunday, January 18th</th>
								            <th>Monday, January 19th</th>
								            <th>Tuesday, January 20th</th>
								            <th>Wednesday, January 21st</th>
								            <th>Thursday, January 22nd</th>
								        </tr>
								    </thead>
								    <tbody>
								    	<tr id="row-1">
								            <td id="hour_fraction-1-0" class="row_num"></td>
								            <td id="element-1-1"></td>
								            <td id="element-1-2"></td>
								            <td id="element-1-3"></td>
								            <td id="element-1-4"></td>
								            <td id="element-1-5"></td>
								            <td id="element-1-6"></td>
								            <td id="element-1-7"></td>
									    </tr>
									    <tr id="row-2">
								            <td id="hour_fraction-2-0" class="row_num"></td>
								            <td id="element-2-1"></td>
								            <td id="element-2-2"></td>
								            <td id="element-2-3"></td>
								            <td id="element-2-4"></td>
								            <td id="element-2-5"></td>
								            <td id="element-2-6"></td>
								            <td id="element-2-7"></td>
									    </tr>
									    <tr id="row-3">
								            <td id="hour_fraction-3-0" class="row_num"></td>
								            <td id="element-3-1"></td>
								            <td id="element-3-2"></td>
								            <td id="element-3-3"></td>
								            <td id="element-3-4"></td>
								            <td id="element-3-5"></td>
								            <td id="element-3-6"></td>
								            <td id="element-3-7"></td>
									    </tr>
								    </tbody>
								</table>
							</div>
								<a href="javascript:void(0)" id="pdf" class="print">Download Program</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	<% } else { %>
			<div class="container-fluid">
				<h1>Oops... only registered users could use this feature</h1>
				<h2>Please choose one of the below options</h2>
				<div class="row">
					<div class="col-md-6 rightify">
						<a href="/signup" class="btn btn-primary btn-lg">Sign Up</a>
					</div>
					<div class="col-md-6 leftify">
						<a href="/signin" class="btn btn-primary btn-lg">Sign In</a>
					</div>
				</div>
			</div>
		<% } %>
		<footer class="footer">
			<div class="list-group-separator"></div>
			<% include ../views/partials/footer %>
		</footer>
		<% include ../views/partials/loadStudentProgramScripts %>
	</body>
</html>